// # Steven.json5
//
// This preference set change serveral settings from Windows built in
// speech recognition feature, including:
//      - Language - The language to use for the recognition: German.
//      - ModeForOff - Waiting mode: Suspended.
//      - SingleTerminalSpace - Number of spaces to be inserted after the spacebar: 2.
//      - EnableDocumentHarvesting - Review documents and mail to improve accurary: Off.
//      - RunAtStartup: Speech recognition should be started at system start: On.
{
    "flat": {
        "name": "Steven",
        "contexts": {
            "gpii-default": {
                "name": "Default preferences",
                "preferences": {
                    "http://registry.gpii.net/common/language": "de-DE",
                    "http://registry.gpii.net/applications/com.microsoft.windows.speechRecognition": {
                        "c0a": "HKEY_LOCAL_MACHINE\\SOFTWARE\\Microsoft\\Speech\\Recognizers\\Tokens\\MS-1031-80-DESK",
                        "ModeForOff": 1,
                        "SingleTerminalSpace": 2,
                        "EnableDocumentHarvesting": 0,
                        "RunAtStartup": "On"
                    }
                }
            }
        }
    }
}
