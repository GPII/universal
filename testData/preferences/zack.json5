                    "http://registry.gpii.net/applications/com.aisquared.zoomtext": {
                        "ZtSpeech.SapiProductName": "Microsoft Zira Desktop - English (United States)-English",
                        "ZtSpeech.Language": 1033,

                        // [Microsoft Zira Desktop - English (United States)-English Speech - Screen Reader]
                        // ==================================================================
