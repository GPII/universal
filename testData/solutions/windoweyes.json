{
    "com.gwmicro.windoweyes": {
        "name": "Window-Eyes",
        "contexts": {
            "OS": [
                {
                    "id": "win32"
                }
            ]
        },
        "settingsHandlers": [
            {
                "type": "gpii.settingsHandlers.XMLHandler",
                "options": {
                    "filename": "${{environment}.APPDATA}\\GW Micro\\Window-Eyes\\users\\default\\sets.dat",
                    "createFile": true
                },
                "capabilities": [
                    "applications.com\\.gwmicro\\.windoweyes.id",
                    "display.screenReader"
                ],

                "capabilitiesTransformations": {
                    "Test\\.test1": {
                        "transform": {
                            "type": "fluid.transforms.literalValue",
                            "inputPath": "http://registry\\.gpii\\.net/common/test1",
                            "value": "GPII"
                        }
                    },
                    "Test\\.test2": {
                        "transform": {
                            "type": "fluid.transforms.valueMapper",
                            "inputPath": "http://registry\\.gpii\\.net/common/test2",
                            "options": {
                                "57803": {
                                    "outputValue": 76
                                },
                                "17454": {
                                    "outputValue": 84
                                }
                            }
                        }
                    }
                }
            }
        ],
        "lifecycleManager": {
            "start": [
                "setSettings",
                {
                    "type": "gpii.launch.exec",
                    "command": "\"${{registry}.HKEY_LOCAL_MACHINE\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\App Paths\\wineyes.exe\\}\""
                }
            ],
            "stop": [
                {
                    "type": "gpii.launch.exec",
                    "command": "${{environment}.SystemRoot}\\System32\\taskkill.exe /f /im wineyes.exe"
                },
                "restoreSettings"
            ]
        }
    }
}