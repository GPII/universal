            "fontSize": 24,
            "magnification": 2.0,
            "tracking": "mouse",
            "invertImages": true,
            "showCrosshairs": true
        }
    },
    
    "control": {
        "keyboardEnhancement": {
            "stickyKeys": true
        }
    },
    
