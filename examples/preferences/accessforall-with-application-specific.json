        "applications": {
            "com.texthelp.readWriteGold": {
                "name": "Read Write Gold",
                "priority": 100,
                "parameters": {
                    "ApplicationSettings.AppBar.LargeIcons.$t": true,
                    "ApplicationSettings.AppBar.optToolbarLargeIcons.$t": true
                }
            }
        }
    }
}
