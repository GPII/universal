{
    "typeName": "acceptanceTests.base.cloudBased",
    "options": {
        "gradeNames": ["autoInit", "fluid.littleComponent"],
        "components": {
            "server": {
                "type": "kettle.server",
                "options": {
                    "logging": true,
                    "port": 8081,
                    "components": {
                        "preferencesServer": {
                            "options": {
                                "userSourceUrl": "file://%root/../../../testData/preferences/acceptanceTests/%token.json"
                            }
                        }
                    }
                }
            }
        },
        "cloudBasedUrls": {
            "preferences": "http://localhost:8081/user/%token",
            "deviceReporter": "",
            "matchMaker": "http://localhost:8081/match"
        }
    },
    "includes": [
        "${universal}/gpii/configs/cloudBased.json",
        "${universal}/gpii/node_modules/flowManager/configs/cloudBased.json",
        "${universal}/gpii/node_modules/preferencesServer/configs/development.json"
    ]
}