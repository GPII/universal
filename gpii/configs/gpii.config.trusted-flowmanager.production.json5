/**
 * Locally running system in production mode
 * Tested via ProductionConfigTests.js
 *
 * NOTE: duplicates solutionsRegistryDataSource options distribution from gpii.config.all.development.dr.production.json5
 */
{
    "type": "gpii.config.trusted-flowmanager.production",
    "options": {
        "distributeOptions": {
            "gpii.config.deviceReporter.flowManager": {
                "record": "{flowManager}.solutionsRegistryDataSource",
                "target": "{that gpii.deviceReporter.live}.options.components.solutionsRegistryDataSource"
            }
        }
    },
    "mergeConfigs": [
        "%deviceReporter/configs/gpii.deviceReporter.config.production.json5",
        "%canopyMatchMaker/configs/gpii.canopyMatchMaker.config.base.json5",
        "%flowManager/configs/gpii.flowManager.config.production.json5"
    ]
}
