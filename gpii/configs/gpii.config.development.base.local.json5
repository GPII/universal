/**
 * This config acts as a base for `gpii.config.development.all.local` and `gpii.config.all.development.dr.production`.
 * It includes configs to locate the flow manager, preferences server and matchmaker all locally. The extra
 * work required is to arrange to cross-inject the ontology handler between the matchmaker and preferences server.
 */
{
    "type": "gpii.config.development.base.local",
    "options": {
        "distributeOptions": {
            "development.all.ontologyHandler": {
                "record": "{flowManager}.ontologyHandler",
                "target": "{that preferencesServer}.options.components.ontologyHandler"
            }
        }
    },
    "mergeConfigs": [
        "%flowManager/configs/gpii.flowManager.config.cloud.base.json5",
        "%flowManager/configs/gpii.flowManager.config.local.base.json5",
        "%preferencesServer/configs/gpii.preferencesServer.config.development.json5",
        "%canopyMatchMaker/configs/gpii.canopyMatchMaker.config.base.json5"
    ]
}
