{
    "display": {
        "screenEnhancement": {
            "magnification": 2.0,
            "tracking": "mouse",

            "screenMagnification": {
                "applications": {
                    "org.gnome.desktop.a11y.magnifier": {
                        "name": "GNOME Shell Magnifier",
                        "priority": 100,
                        "parameters": {
                            "show-cross-hairs": true
                        }
                    },
                    "com.microsoft.windows.magnifier": {
                        "name": "Windows Magnifier",
                        "priority": 0,
                        "parameters": {
                            "MagnifierUIWindowMinimized": {
                                "value": 0,
                                "dataType": "REG_DWORD"
                            }
                        }
                    }
                }
            }
        }
    }
}
