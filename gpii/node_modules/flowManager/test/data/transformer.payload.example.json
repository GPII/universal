[
    {
        "id": "org.gnome.desktop.a11y.magnifier",
        "settingsHandlers": [
            {
                "type": "gpii.gsettings.set,
                "settings": {
                    "mag-factor": 200,
                    "mouse-tracking": "centered",
                    "show-cross-hairs": true
                },
                "options": {}
            }
        ],
        "launchHandlers": [
            {
                "type": "gpii.launch.gsettings",
                "start": {
                    "schema": "org.gnome.desktop.a11y.applications",
                    "key": "screen-magnifier-enabled",
                    "value": true
                },
                "stop": {
                    "schema": "org.gnome.desktop.a11y.applications",
                    "key": "screen-magnifier-enabled",
                    "value": false
                }
            }
        ]
    }
]