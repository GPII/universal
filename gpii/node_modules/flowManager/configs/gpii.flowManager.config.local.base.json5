{
    "type": "gpii.flowManager.config.local.base",
    "options": {
        "distributeOptions": {
            "flowManager.local": {
                "record": ["gpii.flowManager.local", "gpii.contextManager.app"],
                "target": "{that flowManager}.options.gradeNames"
            },
            "flowManager.resetAtStart": {
                "record": true,
                "target": "{that gpii.flowManager.local}.options.resetAtStart"
            },
            "flowManager.deviceReporterDataSource": {
                "record": {
                    "type": "kettle.dataSource.URL",
                    "options": {
                        "url": "http://localhost/device",
                        "port": "{kettle.config}.options.mainServerPort"
                    }
                },
                "target": "{that flowManager deviceReporterDataSource}"
            }
        }
    },
    "mergeConfigs": [
        "./gpii.flowManager.config.base.json5"
    ],
    "require": [
        "contextManager"
    ]
}
