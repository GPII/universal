/**
 * Base configuration for the canopy matchmaker, running on the default port.
 */
{
    "type": "gpii.canopyMatchMaker.config.base",
    "options": {
        "gradeNames": ["fluid.component"],
        "distributeOptions": {
            "canopyMatchMaker.ontologyHandler": {
                "record": "{flowManager}.ontologyHandler",
                "target": "{that gpii.canopyMatchMaker}.options.components.ontologyHandler"
            }
        },

        "components": {
            "server": {
                "options": {
                    "components": {
                        "matchMaker": {
                            "type": "gpii.canopyMatchMaker"
                        }
                    }
                }
            }
        }
    }
}
