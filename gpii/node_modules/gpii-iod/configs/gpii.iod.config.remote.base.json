{
    "type": "gpii.iod.config.remote.base",
    "options": {
        "distributeOptions": {
            "packageData.remote": {
                "record": {
                    "url": "%endpoint/packages/%packageName",
                    "termMap": {
                        "packageName": "%packageName",
                        "endpoint": "noencode:%endpoint"
                    }
                },
                "target": "{that gpii.iod.packages remotePackageData}.options"
            }
        }
    },
    "mergeConfigs": [
        "./gpii.iod.config.base.json"
    ]
}
