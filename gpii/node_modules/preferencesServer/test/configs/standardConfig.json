{
    "typeName": "preferencesServer.tests.standardConfig",
    "options": {
        "gradeNames": ["autoInit", "fluid.littleComponent"],
        "distributeOptions": [{
            "source": "{that}.options.devUrls",
            "target": "{that preferencesServer}.options.urls"
        }],
        "devUrls": {
            "rawPreferences": "file://%root/test/data/%userToken.json"
        },
        "components": {
            "server": {
                "type": "kettle.server",
                "options": {
                    "logging": true,
                    "port": 8081,
                    "components": {
                        "preferencesServer": {
                            "type": "gpii.preferencesServer",
                            "options": {
                                "gradeNames": ["gpii.preferencesServer.dev"],
                                "components": {
                                    "rawPreferencesDataSource": {
                                        "type": "gpii.preferencesServer.tests.testServerMock"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "includes": [
        "../../configs/base.json"
    ]
}