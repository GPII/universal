{
    "typeName": "preferencesServer.production",
    "options": {
        "gradeNames": ["autoInit", "fluid.littleComponent"],
        "components": {
            "server": {
                "type": "kettle.server",
                "options": {
                    "logging": false,
                    "components": {
                        "CORS": {
                            "type": "kettle.middleware",
                            "options": {
                                "allowMethods": ["GET", "POST"],
                            },
                            "createOnEvent": "onMiddleware"
                        },
                        "preferencesServer": {
                            "type": "gpii.preferencesServer",
                            "options": {
                                "userSourceUrl": "http://localhost:5984/user/%token"
                            }
                        }
                    }
                }
            }
        }
    },
    "includes": [
        "./base.json"
    ]
}
