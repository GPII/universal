/**
 * This configuration runs the preferences server in production mode.
 */
{
    "type": "gpii.preferencesServer.config.production",
    "options": {
        "gradeNames": "fluid.component",
        "distributeOptions": {
            "distributePort.productionPort": {
                "record": 8081,
                "target": "{that kettle.server}.options.port"
            },
            "distributePort.productionEnvPort": {
                "record": "@expand:kettle.resolvers.env(GPII_PREFERENCESSERVER_LISTEN_PORT)",
                "target": "{that kettle.server}.options.port",
                "priority": "after:distributePort.productionPort"
            }
        }
    },
    "mergeConfigs": "./gpii.preferencesServer.config.base.json5"
}
