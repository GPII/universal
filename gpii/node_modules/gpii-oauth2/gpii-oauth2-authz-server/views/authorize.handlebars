{{#section 'head'}}
    <script type="text/javascript" src="src/components/authorization/js/Authorize.js"></script>

    <title>Authorize Service</title>

{{/section}}

{{#section 'main'}}
    <section class="gpiic-oauth2-authorization gpii-oauth2-panel small-10 large-6 small-centered columns">
        <div class="gpii-ouath2-inset">
            <div class="gpii-oauth2-activeUser clearfix">
                <span class="right">
                    <span class="gpii-icon gpii-icon-profile" role="presentation"></span>
                    <span class="gpiic-oauth2-authorization-user gpii-oauth2-userName"></span>
                    <a href=""><strong class="gpiic-oauth2-authorization-logout"></strong></a>
                </span>
            </div>

            <p class="gpiic-oauth2-authorization-description"></p>

            <form action="/authorize_decision" method="post">
                <input type="hidden" class="gpiic-oauth2-authorization-transaction" name="transaction_id" value="">
                <input type="submit" class="gpiic-oauth2-authorization-allow button radius" name="allow" value="">
                <input type="submit" class="gpiic-oauth2-authorization-cancel button radius" name="cancel" value="">
            </form>

            <p class="gpiic-oauth2-authorization-directions"></p>
        </div>
    </section>

    <script>
        gpii.oauth2.authorization(".gpiic-oauth2-authorization", {
            model: {
                user: "{{user.username}}",
                service: "{{client.name}}",
                transactionID: "{{ transactionID }}"
            }
        });
    </script>
{{/section}}
