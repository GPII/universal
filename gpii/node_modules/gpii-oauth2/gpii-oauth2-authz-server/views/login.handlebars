{{#section 'head'}}
    <link rel="stylesheet" type="text/css" href="src/components/login/css/Login.css" />
    <script src="src/components/login/js/Login.js"></script>

    <title>Login</title>

{{/section}}

{{#section 'main'}}
    <section class="gpiic-oauth2-login gpii-oauth2-panel small-10 large-8 small-centered columns">
        <div class="gpii-ouath2-inset-horizontal">
            <h1 class="gpii-oauth2-login-header">
                <span class="gpii-icon gpii-icon-password" role="presentation"></span>
                <span class="gpiic-oauth2-login-header">Heading</span>
            </h1>

            <p class="gpiic-oauth2-login-instructions"></p>
        </div>

        <form id="gpiic-oauth2-login-form" class="gpiic-oauth2-login-form" action="/login" method="post">
            <div class="gpii-ouath2-inset-horizontal">
                <div class="gpii-oauth2-login-formFields gpii-ouath2-inset">
                    <label class="gpiic-oauth2-login-usernameLabel" for="gpiic-oauth2-login-usernameInput">Username</label>
                    <div class="gpii-oauth2-login-username">
                        <span class="gpii-icon gpii-icon-profile prefix" role="presentation"></span>
                        <input id="gpiic-oauth2-login-usernameInput" class="gpiic-oauth2-login-usernameInput" type="text" name="username"/>
                    </div>

                    <div class="gpii-oauth2-login-passwordMsgContainer">
                        <label class="gpiic-oauth2-login-passwordLabel" for="gpiic-oauth2-login-passwordInput">Password</label>
                        <span class="gpii-oauth2-login-passwordMsg">
                            <span class="gpiic-oauth2-login-error gpii-oauth2-login-error"></span>
                            <span class="gpiic-oauth2-login-errorIcon gpii-icon gpii-icon-exclamation" role="presentation"></span>
                        </span>
                    </div>
                    <div class="gpii-oauth2-login-password">
                        <span class="gpii-icon gpii-icon-password prefix" role="presentation"></span>
                        <input id="gpiic-oauth2-login-passwordInput" class="gpiic-oauth2-login-passwordInput" type="password" name="password"/>
                    </div>
                </div>
            </div>
            <div class="gpii-oauth2-footer">
                <input type="submit" class="gpiic-oauth2-login-submit gpii-oauth2-login-submit button radius" name="log in" value=""/>
            </div>
        </form>
    </section>

    <script>
        gpii.oauth2.login(".gpiic-oauth2-login", {
            model: {
                loginFailure: {{loginFailed}}
            }
        });
    </script>
{{/section}}
