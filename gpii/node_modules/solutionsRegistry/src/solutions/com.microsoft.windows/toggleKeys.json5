            "properties": {
              "path": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "get": {
                        "type": "string",
                        "required": true
                      },
                      "set": {
                        "type": "string",
                        "required": true
                      }
                    }
                  }
                ],
                "required": true
              },
              "value": {
                "type": "boolean",
                "default": false,
                "required": true
              }
            }
          }
        }
      }
    }
  }
}
