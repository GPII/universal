{
  "name": "Windows notification duration",
  "settingsHandlers": {
    "configure": {
      "supportedSettings": {
        "Duration": {
          "schema": {
            "title": "Notification duration",
            "description": "Changes the time system notifications are displayed",
            "type": "object",
            "properties": {
              "path": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "get": {
                        "type": "string",
                        "required": true
                      },
                      "set": {
                        "type": "string",
                        "required": true
                      }
                    }
                  }
                ],
                "required": true
              },
              "value": {
                "type": "number",
                "default": 5,
                "enum": [
                  5,
                  7,
                  15,
                  30,
                  60,
                  300
                ],
                "enumLabels": [
                  "5s",
                  "7s",
                  "15s",
                  "30s",
                  "60s",
                  "300s"
                ]
              }
            }
          }
        }
      },
