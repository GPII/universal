{
    "name": "Windows Toggle keys feature",
    "settingsHandlers": {
        "configure": {
            "supportedSettings": {
                "ToggleKeysOn": {
                    "schema": {
                        "title": "ToggleKeys accesibility feature",
                        "description": "Enable/Disable ToggleKeys feature",
                        "type": "object",
                        "properties": {
                            "path": {
                                "oneOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "type": "object",
                                        "properties": {
                                            "get": {
                                                "type": "string",
                                                "required": true
                                            },
                                            "set": {
                                                "type": "string",
                                                "required": true
                                            }
                                        }
                                    }
                                ],
                                "required": true
                            },
                            "value": {
                                "type": "boolean",
                                "default": false,
                                "required": true
                            }
                        }
                    }
                }
            },
            "type": "gpii.windows.spiSettingsHandler",
            "liveness": "live",
            "options": {
                "getAction": "SPI_GETTOGGLEKEYS",
                "setAction": "SPI_SETTOGGLEKEYS",
                "uiParam": "struct_size",
                "pvParam": {
                    "type": "struct",
                    "name": "TOGGLEKEYS"
                }
            }
        }
    },
    "contexts": {
        "OS": [
            {
                "windows": {
                    "id": "win32",
                    "version": ">=5.0"
                }
            }
        ]
    },
    "isInstalled": [
        {
            "type": "gpii.deviceReporter.alwaysInstalled"
        }
    ]
}
