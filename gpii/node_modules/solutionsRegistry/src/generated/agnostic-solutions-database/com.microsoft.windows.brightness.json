{
  "name": "Windows brightness settings",
  "settingsHandlers": {
    "configure": {
      "supportedSettings": {
        "Brightness": {
          "schema": {
            "title": "Brightness",
            "description": "Set the screen brightness.",
            "type": "object",
            "properties": {
              "value": {
                "type": "number",
                "default": 0,
                "minimum": 0,
                "maximum": 100
              }
            }
          }
        }
      },
      "type": "gpii.windows.wmiSettingsHandler",
      "liveness": "live",
      "options": {
        "Brightness": {
          "namespace": "root\\WMI",
          "get": {
            "query": "SELECT CurrentBrightness FROM WmiMonitorBrightness"
          },
          "set": {
            "className": "WmiMonitorBrightnessMethods",
            "method": "WmiSetBrightness",
            "params": [
              4294967295,
              "$value"
            ],
            "returnVal": [
              "uint",
              0
            ]
          },
          "settingType": "uint"
        }
      }
    }
  },
  "contexts": {
    "OS": [
      {
        "windows": {
          "id": "win32",
          "version": ">=5.0"
        }
      }
    ]
  },
  "isInstalled": [
    {
      "type": "gpii.deviceReporter.wmiSettingSupported",
      "namespace": "root\\WMI",
      "query": "SELECT CurrentBrightness FROM WmiMonitorBrightness"
    }
  ]
}
