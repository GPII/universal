{
    "name": "Windows precision touchpad settings",
    "settingsHandlers": {
        "configure": {
            "supportedSettings": {
                "SystemSettings_Input_Touch_SetActivationTimeout": {
                    "schema": {
                        "title": "Touchpad sensitivity",
                        "description": "Changes Windows 10 precision touchpad sensitivity.",
                        "type": "object",
                        "properties": {
                            "value": {
                                "default": "Medium sensitivity",
                                "enum": [
                                    "Low sensitivity",
                                    "Medium sensitivity",
                                    "High sensitivity",
                                    "Most sensitive"
                                ],
                                "enumLabels": [
                                    "Low sensitivity",
                                    "Medium sensitivity",
                                    "High sensitivity",
                                    "Most sensitive"
                                ]
                            }
                        }
                    }
                }
            },
            "type": "gpii.windows.systemSettingsHandler",
            "liveness": "live",
            "options": {
                "Async": true,
                "CheckResult": true
            }
        }
    },
    "contexts": {
        "OS": [
            {
                "windows": {
                    "id": "win32",
                    "version": ">=5.0"
                }
            }
        ]
    },
    "isInstalled": [
        {
            "type": "gpii.deviceReporter.alwaysInstalled"
        }
    ]
}
